<div class="row-fluid">
  <div class="span12" style="text-align: right">
    <h2>
      <%= @experience.title %>
    </h2>
    <h4>
      <%= @experience.company_name %>
    </h4>
  </div>
</div>

<div class="row-fluid">
  <div class="skills span6">
    <% @giver.skills.each do |skill| %>
        <%
           style_str = ''
           style_str = 'style=display:none' if @experience.skills.include?(skill) %>
      <span class="skill_tag btn btn-info" id='skill_<%= skill.id %>' <%= style_str %>>
        <%= skill.name %>
      </span>
    <% end %>
  </div>


  <div class="span6">
    <legend>
      Drop your matching skills below:
    </legend>

    <div id="matching-skills-container">
      <% @experience.skills.each do |skill| %>
        <span class="skill_tag btn btn-info" id='skill_<%= skill.id %>'>
          <%= skill.name %>
          <a href="javascript:void(0)" class="close_skill">X</a>
        </span>

      <% end %>
    </div>


  </div>

</div>
