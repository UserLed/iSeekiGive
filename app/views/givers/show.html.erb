<%= render "shared/confirmation_notice" %>

<div class="well">
  <div class="container">
    <h3>
      Welcome <%= @giver.name %>
    </h3>
  </div>
</div>

<div class="tabbable tabs-left">
  <ul class="nav nav-tabs">
    <li>
      <a href="#lA" data-toggle="tab">Account Details</a>
    </li>
    <li>
      <a href="#lB" data-toggle="tab">Account Settings</a>
    </li>
    <li>
      <a href="#lC" data-toggle="tab">Educations</a>
    </li>
    <li>
      <a href="#lD" data-toggle="tab">Experiences</a>
    </li>
    <li>
      <a href="#lE" data-toggle="tab">Skills</a>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane" id="lA">
      <ul class="list-group">
        <li class="list-group-item">
          Email : <%= @giver.email %>
        </li>
        <li class="list-group-item">
          Country : <%= @giver.country %>
        </li>
        <li class="list-group-item total_experience">
          Total Experience : <%= total_experience(@giver) %>
        </li>
      </ul>

      <div class="social-connections">
        <h5>Verified</h5>
        <div class="row-fluid">
          <span class="icon-stack phone">
            <i class="icon-circle icon-stack-base"></i>
            <i class="icon-phone"></i>
          </span>
          Phone Number :
          <% if @giver.phone_verified? %>
            <%= @giver.phone_number.nnumber %>
          <% else %>
            <% if @giver.phone_number.present? %>
              <%= @giver.phone_number.number %>
              <%= link_to "Verify", "Javascript:;" %>
            <% else %>
              <%= link_to "Create and Verify", new_phone_number_path, :class => "fancybox fancybox.ajax" %>
            <% end %>
          <% end %>
        </div>
        <div class="row-fluid">
          <% if @giver.linkedin_connected? %>
            <span class="icon-stack linkedin">
              <i class="icon-circle icon-stack-base"></i>
              <i class="icon-linkedin"></i>
            </span>
            Linkedin: Connected
          <% else %>
            <%= link_to auth_at_provider_path(:provider => :linkedin) do %>
              <span class="icon-stack linkedin">
                <i class="icon-circle icon-stack-base"></i>
                <i class="icon-linkedin"></i>
              </span>
              Complete your profile in seconds with LinkedIn.
            <% end  %>
          <% end %>
        </div>
        <div class="row-fluid">
          <span class="icon-stack twitter">
            <i class="icon-circle icon-stack-base"></i>
            <i class="icon-twitter"></i>
          </span>
          Twitter:
          <% if @giver.twitter_connected? %>
            connected
          <% else %>
            <%= link_to "Connect", auth_at_provider_path(:provider => :twitter) %>
          <% end %>
        </div>
        <div class="row-fluid">
          <span class="icon-stack facebook">
            <i class="icon-circle icon-stack-base"></i>
            <i class="icon-facebook"></i>
          </span>
          Facebook:
          <% if @giver.facebook_connected? %>
            connected
          <% else %>
            <%= link_to "Connect", auth_at_provider_path(:provider => :facebook) %>
          <% end %>
        </div>
      </div>

    </div>

    <div class="tab-pane" id="lB">
      <legend>
        <h3>Education Settings</h3>
      </legend>


    </div>

    <div class="tab-pane" id="lC">
      <legend>
        <h3>Education Details</h3>
      </legend>
      <% @giver.educations.each do |e| %>
        <div class="update_edu_<%= e.id %>">
          <%= render 'common/education_content', :e => e %>
        </div>
        <legend></legend>
      <% end %>
      <div class="new_edu">
        <%= render 'common/new_education' %>
      </div>
    </div>

    <div class="tab-pane" id="lD">
      <legend>
        <h3>Experience Details</h3>
      </legend>
      <% @giver.experiences.each do |e| %>
        <div class="update_exp_<%= e.id %>">
          <%= render 'common/experience_content', :e => e %>
        </div>
        <legend></legend>
      <% end %>
      <div class="new_exp">
        <%= render 'common/new_experience' %>
      </div>
    </div>

    <div class="tab-pane" id="lE">
      <legend>
        <h3>Skills</h3>
      </legend>
      <% @giver.skills.each do |e| %>
        <div class="update_skill_<%= e.id %>">
          <%= render 'common/skill_content', :e => e %>
        </div>
        <legend></legend>
      <% end %>
      <div class="new_skill">
        <%= render 'common/new_skill' %>
      </div>
    </div>
  </div>
</div>

<% if current_user.show_this_popup(controller.controller_name, controller.action_name) %>
  <%= render "shared/profile_popup" %>
<% end %>