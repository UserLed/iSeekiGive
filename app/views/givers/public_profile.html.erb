<div class="row-fluid">
  <div class="span12 profile-cover" style= 'background-image: url(<%= @giver.cover_photo.public_profile_header.url %>);'>
    <%= image_tag @giver.profile_photo.public_profile.url, :class => "profile-photo" %>
    <%= link_to("Schedule a Session", "display_calendar", :class => "btn btn-primary btn-large", :style => "margin-left:900px") unless @giver.time_slots.blank? %>
  </div>
</div>

<div class="row-fluid" style="margin-top:20px;">
  <div class="span4">
    <strong>Lived In</strong><br/>
    <p>
      <%= @giver.current_location %>
    </p>
    <% if @giver.game.present? and @giver.game.locations.present? %>
      <p>
        <%= @giver.game.locations %>
      </p>
    <% end %>
    <hr/>

    <% if @giver.educations.present? %>
      <strong>Studied</strong><br/>
      <ul>
        <% @giver.educations.each do |education| %>
          <li>
            <%= education.field_of_study %>
          </li>
        <% end %>
      </ul>
      <p>Considered Studying:</p>
      <ul>
        <% @giver.educations.each do |education| %>
          <% if education.fields_of_study.present? %>
            <li>
              <%= education.fields_of_study %>
            </li>
          <% end %>
        <% end %>
      </ul>
    <% end %>
    <hr/>

    <strong>Languages</strong><br/>


    <hr/>
    <strong>Verifications</strong><br/>
    <ul>
      <% if @giver.phone_number.present? %>
        <li>Phone Number Verified</li>
      <% end %>

      <% if @giver.connections.present? %>
        <% @giver.connections.each do |connection| %>
          <li>
            <%= connection.provider.capitalize %>
            Verified
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <div class="span8">
    <ul class="nav nav-tabs">
      <li class="active">
        <a href="#experiences" data-toggle="tab">Experience</a>
      </li>
      <li>
        <a href="#perspectives" data-toggle="tab">Perspectives</a>
      </li>
      <li>
        <a href="#reviews" data-toggle="tab">Reviews</a>
      </li>
    </ul>

    <div class="tab-content">
      <div id="experiences" class ="tab-pane fade in active">
        <%= render "experiences" %>
      </div>

      <div id="perspectives" class ="tab-pane fade">
        <%= render "perspectives" %>
      </div>

      <div id="reviews" class ="tab-pane fade">
        <%= render "reviews" %>
      </div>
    </div>
  </div>
</div>