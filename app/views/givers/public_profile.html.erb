<div class="row-fluid">
  <legend>
    <h3>
      <%= @giver.name %>'s Public Profile
    </h3>
  </legend>
  <div class="row-fluid">
    <div class="span1"></div> 
      <div class ="span10" style= 'background-image: url(<%= @giver.cover_photo.public_profile_header.url %>);background-repeat:no-repeat'>
        <%= image_tag @giver.profile_photo.public_profile.url,:style => "border:solid" %>
        <%= link_to("Schedule a Session", "display_calendar", :class => "btn btn-primary btn-large", :style => "margin-left:900px") unless @giver.time_slots.blank? %>
    </div>
  </div>
  <br/>
  <div class="row-fluid">
    <div class="span3">
    <% unless @giver.city.nil? %>
      <strong>Lived in:</strong><br/>
      <p><%= @giver.city %></p>
      <p><%= @giver_game.locations unless @giver_game.nil?  %>
      </p>
    <% end %>
      <hr/>
      <% unless @giver_studies.nil? %>
        <strong>Studied: </strong><br/>
        <% @giver_studies.each do |study| %>
          <%= study.field_of_study  %>
          <br/>
          <%= study.fields_of_study %>
          <br/>
        <% end %>
        <hr/>
        <strong>School</strong><br/>
        <% @giver_studies.each do |school| %>
          <%= school.school_name %>
          <br/>
        <% end %>

      <% end %>
      <hr/>

      <strong>Verifications</strong><br/>
      <% unless @giver_phone_number.nil? %>
        <strong>Phone no:</strong><br/>
        <p><%= @giver_phone_number.number %></p>
      <% end %>

      <% unless @giver_connections.blank? %>
        <% @giver_connections.each do |connection| %>
          <strong><%= connection.provider %></strong>
          <br/>
          <p><em>status</em>: connected</p>
        <% end %>
      <% end %>
      <hr/>

    </div>
    <div class="span9" style="position:relative">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#experiences" data-toggle="tab">Experience</a></li>

        <li><a href="#perspectives" data-toggle="tab">Perspectives</a></li>

        <li><a href="#reviews" data-toggle="tab">Reviews</a></li>
      </ul>

    <div id="experiences" class ="tab-pane fade in active" style="position:absolute">
      <%= render :partial => "experiences", :locals => {:giver_experiences => @giver_experiences } %>
    </div>
    <div id="perspectives" class ="tab-pane fade" style="position:absolute">
      <%= render :partial => "perspectives", :locals => {:game => @giver_game } %>
    </div>
    <div id="reviews" class ="tab-pane fade" style="position:absolute">
      <%= render :partial => "reviews", :locals => {:giver => @giver } %>
    </div> 
    </div>
  </div>
</div>


  