<%= form_for e, :method => :put,:html => {:class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :school_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :school_name, :class => 'text_field', :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :degree, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :degree, :class => 'text_field', :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :field_of_study, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :field_of_study, :class => 'text_field', :required => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_date, "Dates Attended", :class => 'control-label' %>
    <div class="controls">
      <%= select_year(e.start_date, :start_year => Time.now.year - 50, :end_year => Time.now.year, :field_name => 'start_date', :prefix => :education) %> to
      <%= select_year(e.end_date, :start_year => Time.now.year - 50, :end_year => Time.now.year + 50, :field_name => 'end_date', :prefix => :education) %>
    </div>
  </div>
  <%= f.submit "Done", :class => "btn btn-medium btn-primary" %>
  <%= link_to "Cancel", '#',:class => "btn btn-info cancel"  %>
<% end %>