<%= form_for @phone_number, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :number, "Phone Number", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'text_field', :required => true %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Create", :class => 'btn btn-primary' %>
  </div>
<% end %>
