<header class="main shrink" style="padding: 0">
<div class="container">
<div class="row">
<div class="span2" style="margin: 0; padding: 0">
  <div class="span2" style="margin: 0 ; padding: 0">  <%= link_to image_tag('logo.png', :style => "width:147px; height:92px"), root_path,:class => "brand"   %>
  </div>

</div>

<div class="span4" style="margin: 30px 0 0 0;">
  <%= form_tag '#', :method => "get" do %>
      <%= text_field_tag "tag",'',:class => "input-xlarge" %>
  <% end %>
</div>
<div class="span6" style="margin: 25px 0 0 0;">
  <div class="span3 top-menu" >
    <nav>
      <ul class="nav nav-pills flexnav" id="flexnav" data-breakpoint="800">
        <li >
          <%= link_to "How it works", how_it_works_path  %>
        </li>
        <li >
          <%= link_to "About Us", "http://blog.iseekigive.com/ourstory", :target => "_blank"  %>
        </li>
      </ul>
    </nav>
  </div>

  <div class="nav-collapse pull-right" style="margin: 5px 0 0 0;">
    <% if current_user %>
          <ul class="nav">
            <li class="dropdown">
              <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                <i>
                  <%= image_tag(current_user.profile_photo.public_profile, :class=>'img-circle profile-image') if current_user.profile_photo.present? %>
                </i>
                <%= current_user.name %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">

                <% if current_user %>

                    <li class="<%= "active" if current_page?(dashboard_user_path(current_user)) %>">
                      <%= link_to "Dashboard", dashboard_user_path(current_user) %>
                    </li>
                    <li class="<%= "active" if current_page?(user_perspectives_path(current_user)) %>">
                      <%= link_to "Perspectives", user_perspectives_path(current_user) %>
                    </li>
                    <li class="<%= "active" if current_page?(user_perspectives_path(current_user)) %>">
                      <%= link_to "Manage Sessions", user_perspectives_path(current_user) %>
                    </li>
                    <li class="<%= "active" if current_page?(user_path(current_user)) %>">
                      <%= link_to "Edit Profile", user_path(current_user) %>
                    </li>
                    <li>
                      <%= link_to "Boosters", "Javascript:;" %>
                    </li>

                <% end %>


                <li class="divider"></li>
                <li>
                  <%= link_to "Logout", logout_path %>
                </li>
              </ul>
            </li>
          </ul>
    <% else %>
        <ul class="nav nav-pills flexnav" id="flexnav" data-breakpoint="800">
          <li >
            <%= link_to "Login", login_path  %>
          </li>
        </ul>
    <% end %>


  </div>



</div>
</div>
</div>
</header>



