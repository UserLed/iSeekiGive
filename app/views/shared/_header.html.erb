<div class="navbar navbar-fluid-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "iSeekiGive", root_path, :class => "brand" %>
      <div class="container-fluid nav-collapse">
        <ul class="nav">
          <% if current_user %>
          <% if current_user.seeker? %>
          <li class="<%= "active" if current_page?(dashboard_seeker_path(current_user)) %>">
              <%= link_to "Dashboard", dashboard_seeker_path(current_user) %>
            </li>
          <% else %>
            <li class="<%= "active" if current_page?(dashboard_giver_path(current_user)) %>">
              <%= link_to "Dashboard", dashboard_giver_path(current_user) %>
            </li>
          <% end %>
          <li class="<%= "active" if current_page?(current_user) %>">
            <%= link_to "Profile", current_user %>
          </li>
          <li>
            <%= link_to "Perspectives", current_user.giver? ? giver_perspectives_path(current_user) : seeker_perspectives_path(current_user) %>
          </li>
          <li>
            <%= link_to "Rewards", 'javascript:void(0)' %>
          </li>
          <li>
            <%= link_to "Sessions", 'javascript:void(0)' %>
          </li>
          <li>
            <%= link_to "Boosters", 'javascript:void(0)' %>
          </li>
          <li>
            <%= link_to "Logout", logout_path  %>
          </li>
        <% else %>
          <li class="<%= "active" if current_page?(signup_path) %>">
            <%= link_to "Sign Up", signup_path  %>
          </li>
          <li class="<%= "active" if current_page?(login_path) %>">
            <%= link_to "Log In", login_path  %>
          </li>
        <% end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>