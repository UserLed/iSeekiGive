<%= form_for tag, :remote => true, :html => {:class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field', :required => true %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit "Done", :class => "btn btn-medium btn-primary" %>
      <%= link_to "Cancel", 'javascript:void(0)',:class => "btn btn-info cancel"  %>
    </div>
  </div>
<% end %>
