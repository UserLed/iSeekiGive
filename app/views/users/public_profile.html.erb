<div class="container_lock">
<div class="row-fluid">
  <div class="span12 profile-cover" style= 'background-image: url(<%= @user.cover_photo.public_profile_header.url %>);'>
    <%= image_tag @user.profile_photo.public_profile.url, :class => "img-circle profile-photo" if @user.profile_photo.present? %>
    <%= link_to("Schedule a Session", "javascript:void(0)", :class => "btn btn-primary btn-large", :style => "margin-left:900px") unless @user.time_slots.blank? %>
  </div>
</div>
<div class="row-fluid" style="margin-top:20px;">
  <div class="span3 profile-left">
    <strong>Lived In</strong><br/>
    <p>
      <%= @user.current_location %>
    </p>
    <% if @user.game.present? and @user.game.locations.present? %>
      <p>
        <%= @user.game.locations %>
      </p>
    <% end %>
    <hr/>

    <% if @user.educations.present? %>
      <strong>Studied</strong><br/>
      <ul>
        <% @user.educations.each do |education| %>
          <li>
            <%= education.field_of_study %>
          </li>
        <% end %>
      </ul>
      <p>Considered Studying:</p>
      <ul>
        <% @user.educations.each do |education| %>
          <% if education.fields_of_study.present? %>
            <li>
              <%= education.fields_of_study %>
            </li>
          <% end %>
        <% end %>
      </ul>
    <% end %>
    <hr/>

    <strong>Languages</strong><br/>


    <hr/>
    <strong>Verifications</strong><br/>
    <ul>
      <% if @user.phone_number.present? %>
        <li>Phone Number Verified</li>
      <% end %>

      <% if @user.connections.present? %>
        <% @user.connections.each do |connection| %>
          <li>
            <%= connection.provider.capitalize %>
            Verified
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <div class="span8">
    <ul class="nav nav-tabs">
      <li>
        <a href="#experiences" data-toggle="tab">Experience</a>
      </li>
      <li class="active">
        <a href="#perspectives" data-toggle="tab">Perspectives</a>
      </li>
      <li>
        <a href="#reviews" data-toggle="tab">Reviews</a>
      </li>
    </ul>

    <div class="tab-content">
      <div id="experiences" class ="tab-pane fade">
        <%= render "experiences" %>
      </div>

      <div id="perspectives" class ="tab-pane fade in active">
        <%= render "perspectives" %>
      </div>

      <div id="reviews" class ="tab-pane fade">
        <%= render "reviews" %>
      </div>
    </div>
  </div>
</div>
</div>

<% unless logged_in? %>
  <script type="text/javascript">
  $(document).ready(function(){
      $(".container_lock").block({
        message : ""
      });
  });
  </script>
<% end %>

