<div class="container" style="overfolw:scroll">
	<div class="row ">
		<div class="span3" style="width:auto;height:auto">
		<%= image_tag current_user.profile_photo.thumb, :id => "profile_photo" %>
		</div>
	</div>


	<%= form_for @user do |f| %>
	  <% %w[x y w h r_width r_height].each do |attribute| %>
	    <%= f.hidden_field "crop_#{attribute}" %>
	  <% end %>
	  <div >
	    <%= f.submit "Crop", :class => 'btn btn-success' %>
	  </div>
	<% end %>
</div>





<script type="text/javascript">
	$(function(){
		$("#profile_photo").Jcrop({
			aspectRatio: 1,
			maxSize: 0,
			minSize: 0,
			// trueSize : [200,200],
			onSelect : showCoords,
			onChange : showCoords,
			setSelect:   [ 100, 100, 50, 50 ]
		});
	});

	function showCoords(c){
		$("#user_crop_x").val(c.x);
		$("#user_crop_y").val(c.y);
		$("#user_crop_w").val(c.w);
		$("#user_crop_h").val(c.h);
		$("#user_crop_r_height").val($("#profile_photo").height());
		$("#user_crop_r_width").val($("#profile_photo").width());
		console.log("x2: ",c.x2);
		console.log("y2: ",c.y2);
	}
</script>