<%= form_tag "perspectives/add_story", :class => :add_story do %>
	<%= text_area_tag :story, nil, :placeholder => "Add your story here", :class =>"form_text_area" %>
	<br/>
	<%= hidden_field_tag :story_type, type %>
	<%= text_field_tag :keyword,nil, :class => "keyword_tag" %>
	<%= check_box_tag :anonymous %> Anonymous 
	<br/>
	<%= submit_tag "Submit" %>
<% end %>
