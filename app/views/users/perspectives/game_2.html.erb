<div class="row-fluid">
  <%= render "header" %>
  <h4>
    Game 2: Skills Match
  </h4>

  <h5>
    This Game is to reflect on what youâ€™ve learned and where
  </h5>
</div>

<div class="row-fluid">
  <div class="span6">
    <legend>Experiences</legend>
    <% @user.experiences.each do |ex| %>
        <%= render 'experience', :experience => ex %>
        <%= link_to "Manage Skills", game_experience_user_perspectives_path(@user, ex), :class => 'fancybox' %>
        <div id="exp_skill_show_<%= ex.id %>">
          <%= render :partial => 'skill_body',:locals => {:skills => ex.skills} %>
        </div>
        <hr/>
    <% end %>
  </div>
  <div id="experience_skill"></div>
  <div class="span6">
    <legend>Educations</legend>
    <% @user.educations.each do |edu| %>
        <%= render 'education', :education => edu %>
        <%= link_to "Manage Skills", game_education_user_perspectives_path(@user, edu), :class => 'fancybox' %>
        <div id="edu_skill_show_<%= edu.id %>">
          <%= render :partial => 'skill_body',:locals => {:skills => edu.skills} %>
        </div>
        <hr/>
    <% end %>
  </div>
</div>


<script type="text/javascript">

    $(document).ready(function () {
        $("a.fancybox").fancybox();
    });

</script>


<div class="row-fluid">
  <div class="span12 form-actions">
    <legend>
      Pick a choice and save your results
    </legend>
    <%= link_to "Return to Perspectives", user_perspectives_path(@user), :class => "btn btn-info" %> |
    <%= link_to "Next Game", game_3_user_perspectives_path(@user), :class => "btn btn-info" %>
  </div>
</div>
