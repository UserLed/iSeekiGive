<div class="span6">

	<%= form_tag messages_new_seeker_sessions_path(current_user, :giver => params[:giver]) do %>
		<%= label_tag "From" %>
		<%= text_field_tag :from, current_user.email, :readonly=> true %>
		<br/>
		<%= label_tag "To" %>
		<%= text_field_tag :to, @to.email, :readonly => true %>
		<br/>
		<%= label_tag "Subject" %>
		<%= text_field_tag :subject %>
		<br/>
		<%= text_area_tag :content,nil,:size => "25x10", :style => "width: 500px" %>
		<br/>
		<%= submit_tag "Send", :class => 'btn btn-success' %>
	<% end %>
</div>

<div class="span6">
  <%= form_for @message, :as => :message, :url => messages_new_seeker_sessions_path(current_user), :method => :post do |f| %>
      <%= label_tag "To" %>
      <%= f.hidden_field :recipient_id, :value => @to.id %>  <%= @to.name %>
      <br/>
      <%= f.text_area :content, :size => "25x10", :style => "width: 500px" %>
      <br/>
      <%= f.submit 'Save', :class => 'btn btn-success' %>
  <% end %>
</div>