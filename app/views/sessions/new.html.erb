<div class="well-wrap well container">
  <div class="title">
    Log in
  </div>

  <div class="panel-content">
    <%= link_to auth_at_provider_path(:provider => :facebook,:social_type =>'login'), :class => "fb-blue btn icon-btn btn-block padded-btn-block large" do %>
      <span class="icon-container">
        <i class="icon icon-facebook"></i>
      </span>
      <span class="text-container fb-login"> Log in with Facebook </span>
    <% end %>



    <div class="signup-or-separator shift">
      <span class="text">or</span>
      <hr/>
    </div>

    <%= render "form" %>

  </div>

  <div class="panel-footer">
    Don't have an account?
    <%= link_to "Sign up", signup_path %>
  </div>

</div>

